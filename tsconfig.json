{
  "compilerOptions": {
    "module": "ES2015",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "typeRoots": [ "node_modules/@types" ],
  },
  "include": ["src"],
  "exclude": [ "node_modules", "test","types", "dist" ]
}